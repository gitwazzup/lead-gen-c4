@startuml
!include https://raw.githubusercontent.com/adrianvlupu/C4-PlantUML/latest/C4_Context.puml

LAYOUT_WITH_LEGEND()

Person(ce, "Content editor")
Person(user, "User", "A potential client who visits the website.")
System(cms, "Content management", "Allows the user to add and edit forms and car model data.")
System(app, "Web application", "Allows the forms to be shown on the web.")
System_Ext(lms, "LMS Services", "Has data on ...")
System_Ext(osb, "OSB", "Provides endpoints for ...")

Rel(ce, cms, "Uses")
Rel(user, app, "Uses")
Rel(cms, app, "Sends form data", "JSON")
Rel(app, lms, "Uses")
Rel(app, osb, "Uses")
@enduml
